--Below is a generic query for hitting a calendar table

SELECT %CALENDAR_DATE%, %DAY_OF_WEEK%, %HOLIDAY_NAME%
FROM %CALENDARDB%
WHERE %HOLIDAY_FLAG% = 1
AND %CALENDAR_YEAR% = 2015
UNION
SELECT %CALENDAR_DATE%, %DAY_OF_WEEK%, %HOLIDAY_NAME%
FROM %CALENDARDB%
WHERE UPPER(%DAY_OF_WEEK%) IN ('SATURDAY','SUNDAY')
AND %CALENDAR_YEAR% = 2015
